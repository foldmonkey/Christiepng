<div class="text-field text-center my-1">
  <h1>Login</h1>
  <%= form_tag '/login' do %>
 	<div class="text-field text-center my-1">	
		Email: <%= text_field_tag :email %>
	</div>
	<div class="text-field text-center my-1">	
		Password: <%= password_field_tag :password %>
	</div>	
	<%= link_to "Home", root_path, :class => "btn btn-primary" %>
	<%= submit_tag "Submit", :class => "btn btn-primary" %>
  <% end %>
</div>