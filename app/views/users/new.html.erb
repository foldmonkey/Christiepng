<div class="text-field text-center my-1">
  <h1>Signup</h1>
	<%= form_for :user, url: '/users', :html => {:multipart => true} do |f| %>
	  <div class="text-field text-center my-1">
	  	<%= f.label :first_name %>
	  	<%= f.text_field :first_name %>
	  </div>
	  <div class="text-field text-center my-1">	
	  	<%= f.label :last_name %>
	  	<%= f.text_field :last_name %>
	  </div>
	  <div class="text-field text-center my-1">	
	  	<%= f.label :email %>
	    <%= f.text_field :email %>
	  </div>
	  <div class="text-field text-center my-1"> 
	   	<%= f.label :country %>
	    <%= f.text_field :country %>
	  </div>
	  <div class="text-field text-center my-1">
	  	<%= f.label :password %>
	    <%= f.password_field :password %>
	  </div>
	  <%= f.submit "Submit", :class => "btn btn-primary my-2" %><br>
	  <%= link_to "Back", root_path, :class => "btn btn-primary my-2" %>  
	<% end %>
</div>