<div class= "container my-3 text-center">
	<%= form_with scope: :product, url: products_update_path, method: :patch, html: {:multipart => true} do |f| %>
	<div class= "my-4">
		<%= f.label :description %>
		<%= f.text_field :description %>
	</div>
	<div class= "my-4">
		<%= f.label :category %>
		<%= f.text_field :category %>
	</div>
	<div class= "my-4">
		<%= f.label :color %>
		<%= f.text_field :color %>
	</div>
	<div class= "my-4">
		<%= f.label :price %>
		<%= f.text_field :price %>
	</div>
	<div class= "my-4">
		<%= f.file_field :image, multiple: true %>
	</div>
	<div class= "my-4">
		<%= f.submit :class => "btn btn-primary" %><br>
		<%= link_to 'Back', products_home_path, :class => "btn btn-primary my-3" %>
	</div>
	<% end %>
</div>