<div class= "container my-3 text-center">
	<%= form_with scope: :product, url: products_create_path, method: :post, local: true, :html => { multipart: true } do |f| %>
	<div class= "my-4">
		<%= f.label :description %> :
		<%= f.text_field :description %>
	</div>
	<div class= "my-4">
		<%= f.label :category %> :
		<%= f.text_field :category %>
	</div>
	<div class= "my-4">
		<%= f.label :color %> :
		<%= f.text_field :color %>
	</div>
	<div class= "my-4">
		<%= f.label :price %> :
		<%= f.text_field :price %>
	</div>
	<div class= "my-4">
		<%= f.file_field :image, multiple: true %>
	</div>
	<div class= "my-4">
		<%= f.submit :class => "btn btn-primary" %>
		<%= link_to 'Back', products_home_path, :class => "btn btn-primary" %>
	</div>
	<% end %>
</div>

<!-- scope: :product, url: products_create_path, method: :post, local: true, -->